{
  "name": "interactive-portfolio",
  "version": "1.0.0",
  "description": "AI destekli, mobil-first, uyarlanabilir portföy şablonu",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn server/index.ts",
    "build:css": "postcss public/styles.css -o public/styles.min.css --env production",
    "build:js": "terser public/app.js -o public/app.min.js --compress --mangle",
    "build": "npm run build:css && npm run build:js && npx tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test:build": "npm run build && echo 'Build successful' && ls -la dist/",
    "railway:start": "npm run build && node dist/index.js"
  },
  "keywords": [
    "portfolio",
    "ai",
    "chatbot",
    "interactive"
  ],
  "author": "Cüneyt Kaya",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "openai": "^4.20.1",
    "yaml": "^2.3.4",
    "nodemailer": "^6.9.7",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.14",
    "@types/node": "^20.8.10",
    "ts-node-dev": "^2.0.0",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "terser": "^5.20.0",
    "postcss-cli": "^10.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
